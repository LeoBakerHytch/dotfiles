[user]
	name = Leo Baker-Hytch
	email = l.bakerhytch@gmail.com

[github]
	user = LeoBakerHytch
	token = !~/.github-token

[credential]
	helper = osxkeychain

[color]
	ui = true
	branch = auto
	diff = auto
	interactive = auto
	status = auto

[color "branch"]
	current = green
	local = white
	remote = blue

[color "diff"]
	frag = cyan
	meta = white
	new = green
	old = yellow bold

[color "status"]
	added = cyan bold
	changed = yellow bold
	untracked = blue bold

[alias]
	c = commit
	d = diff
	s = status --short
	amend = commit --amend
	pop = stash pop
	sync = !git pull --rebase && git push
	wdiff = diff --color-words
	wshow = show --color-words
	l = log --graph --pretty=format:'%C(blue)%h%C(reset) -%C(yellow bold)%d%C(reset) %s %C(green)(%cr)%C(reset)' --abbrev-commit --date=relative

[core]
	excludesfile = ~/.gitignore_global
