[user]
	name = Leo Baker-Hytch
	email = l.bakerhytch@gmail.com

[github]
	user = LeoBakerHytch
	token = !~/.github-token

[credential]
	helper = osxkeychain

[color]
	ui = true
	branch = auto
	diff = auto
	interactive = auto
	status = auto

[color "branch"]
	current = green
	local = white
	remote = blue

[color "diff"]
	frag = cyan
	meta = white
	new = green
	old = yellow

[color "status"]
	added = cyan
	changed = yellow
	untracked = blue

[alias]
	c = commit
	d = diff
	s = status --short
	amend = commit --amend
	pop = stash pop
	sync = !git pull --rebase && git push
	wdiff = diff --color-words
	wshow = show --color-words
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative

[core]
	excludesfile = ~/.gitignore_global
