	email = l.bakerhytch@gmail.com

[github]
	user = LeoBakerHytch

[credential]
	helper = osxkeychain

[diff]
	compactionHeuristic = true

[diff-so-fancy]
	markEmptyLines = false

[color]
	ui = true
	branch = auto
	diff = auto
	interactive = auto
	status = auto

[color "branch"]
	current = green
	local = white
	remote = blue

[color "diff"]
	frag = cyan
	meta = white
	new = green
	old = yellow bold

[color "status"]
	added = cyan bold
	changed = yellow bold
	untracked = blue bold

[alias]
	a = add
	u = add -u
	c = commit
	d = diff
	dc = diff --cached
	s = status --short
	b = branch
	co = checkout
	cp = cherry-pick
	am = commit --amend
	f = commit --amend --no-edit
	fu = !git u && git f
	ahead = !git rev-list --count $(git rev-parse HEAD) ^$(git rev-parse @{u})
	start = !git init && git commit --allow-empty -m 'Initial commit'
	pop = stash pop
	sync = !git pull --rebase && git push
	wd = diff --color-words
	ws = show --color-words
	l = log --graph --pretty=format:'%C(blue)%h%C(reset) -%C(yellow bold)%d%C(reset) %s %C(green)(%cd)%C(reset)' --abbrev-commit --date=relative

[core]
	excludesfile = ~/.gitignore_global
	# Make rebase safer on OS X
	# See: http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/
	trustctime = false
	pager = diff-so-fancy | less --tabs=4 -RFX

[push]
	default = simple

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
